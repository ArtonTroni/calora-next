{
  "name": "calora-app-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest --testPathPattern=__tests__/api",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:seed": "node scripts/test-seed.js",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:build": "docker build -t calora:latest .",
    "docker:test": "docker compose -f docker-compose.test.yml up --abort-on-container-exit",
    "mongo": "docker compose up -d mongo",
    "mongo:stop": "docker compose stop mongo",
    "mongo:shell": "docker compose exec mongo mongosh calora -u admin -p password123 --authenticationDatabase admin",
    "mongo:logs": "docker compose logs -f mongo",
    "db:seed": "node scripts/seed-database.js",
    "db:explore": "node scripts/explore-mongoose.js",
    "db:queries": "node scripts/app-queries.js",
    "db:reset": "docker compose down -v && docker compose up -d",
    "ci:install": "npm ci",
    "ci:build": "npm run build",
    "ci:test": "npm run test:coverage",
    "ci:lint": "npm run lint && npm run type-check",
    "ci:security": "npm audit --audit-level moderate",
    "deploy:staging": "echo 'Deploying to staging...'",
    "deploy:production": "echo 'Deploying to production...'",
    "smoke-test": "node scripts/smoke-test.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "mongoose": "^8.7.0",
    "next": "15.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^15.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "audit-ci": "^6.6.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.3.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "mongodb-memory-server": "^9.1.3",
    "node-mocks-http": "^1.13.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
